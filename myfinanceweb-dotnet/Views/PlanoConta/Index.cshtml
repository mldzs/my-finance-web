@{
    ViewData["Title"] = "Plano Contas";
}

<h3>Plano de Contas <button type="button" class="btn btn-block btn-primary float-end" onclick="CriarPlanoConta()">Criar
    Plano de Contas</button></h3>
<hr>

<table class='table table-striped table-hover table-sm'>
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th></th>
    </tr>

    @{
        foreach (var item in (List<PlanoContaModel>)ViewBag.list)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
                <td>
                    <div class="btn-group btn-group-sm float-end" role="group">
                        <button class='btn btn-secondary text-capitalize' onclick="EditarPlanoConta(@item.Id)">editar</button>
                        <button class='btn btn-danger text-capitalize' onclick="ExcluirPlanoConta(@item.Id)">deletar</button>
                    </div>
                </td>
            </tr>
        }
    }

</table>

<script>
    function CriarPlanoConta() {
        window.location.href = "../PlanoConta/CriarPlanoConta";
    }
    function EditarPlanoConta(id) {
        window.location.href = "../PlanoConta/CriarPlanoConta/" + id;
    }
    function ExcluirPlanoConta(id) {
        window.location.href = "../PlanoConta/ExcluirPlanoConta/" + id;
    }
</script>
