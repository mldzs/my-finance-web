@{
    ViewData["Title"] = "Transações";
}

<h3>Transações Financeiras <button type="button" class="btn btn-block btn-primary float-end"
        onclick="CriarTransacao()">Nova Transação</button></h3>
<hr>

<table class='table table-striped table-hover table-sm'>
    <tr>
        <th>Id</th>
        <th>Data</th>
        <th>Valor</th>
        <th>Tipo</th>
        <th>Descrição</th>
        <th>Plano de Conta</th>
        <th></th>
    </tr>

    @{
        foreach (var item in (List<TransacaoModel>)ViewBag.list)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Data</td>
                <td>@item.Valor</td>
                <td>@item.Tipo</td>
                <td>@item.Descricao</td>
                <td>@item.IdPlanoConta</td>
                <td>
                    <div class="btn-group btn-group-sm float-end" role="group">
                        <button class='btn btn-secondary text-capitalize' onclick="EditarTransacao(@item.Id)">editar</button>
                        <button class='btn btn-danger text-capitalize' onclick="ExcluirTransacao(@item.Id)">deletar</button>
                    </div>
                </td>
            </tr>
        }
    }

</table>

<script>
    function CriarTransacao() {
        window.location.href = "../Transacao/CriarTransacao";
    }
    function EditarTransacao(id) {
        window.location.href = "../Transacao/CriarTransacao/" + id;
    }
    function ExcluirTransacao(id) {
        window.location.href = "../Transacao/ExcluirTransacao/" + id;
    }
</script>
